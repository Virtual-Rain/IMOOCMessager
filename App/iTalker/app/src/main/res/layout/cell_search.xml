<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginBottom="@dimen/len_2"
    android:background="@color/white"
    android:paddingBottom="@dimen/len_12"
    android:paddingTop="@dimen/len_12"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_16">

    <net.zhouxu.italker.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_gravity="start|center_vertical"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:src="@drawable/default_portrait"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/len_12"
        android:ellipsize="end"
        android:layout_gravity="start|center_vertical"
        android:gravity="center_vertical"
        android:lines="1"
        tools:text="@string/app_name"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/fontNameSize"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <ImageView
        android:id="@+id/im_follow"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/sel_btn_bg_accent_4"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sel_opt_done_add"
        android:tint="@color/white_alpha_208"/>
</LinearLayout>